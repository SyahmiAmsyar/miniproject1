<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_course_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    app:contentPadding="16dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/course_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Course Icon"
            android:src="@drawable/eed_image"
            android:scaleType="fitCenter"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_course_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diploma of Mechatronics Engineering Technology"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:ellipsize="end"
                android:maxLines="2"/>

            <TextView
                android:id="@+id/text_programme_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diploma"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward_grey_24dp"
            android:contentDescription="View Details"
            app:tint="#AAAAAA"
            android:layout_marginStart="8dp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>