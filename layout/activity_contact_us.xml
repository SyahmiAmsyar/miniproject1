<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9F9F9"
    android:padding="20dp"
    tools:context=".ContactUsActivity">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get In Touch"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#004A99"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <!-- Phone Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHONE (General Enquiries)"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/text_contact_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+603-8921 9000"
                android:textColor="#004A99"
                android:textSize="18sp"
                android:clickable="true"
                android:focusable="true"
                android:autoLink="phone"
                android:drawableStart="@drawable/ic_call_24dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                app:drawableTint="#004A99" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Email Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL (Admissions)"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/text_contact_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="admission@gmi.edu.my"
                android:textColor="#004A99"
                android:textSize="18sp"
                android:clickable="true"
                android:focusable="true"
                android:autoLink="email"
                android:drawableStart="@drawable/ic_email_24dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                app:drawableTint="#004A99" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Address Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOCATION"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="German-Malaysian Institute\nJalan Ilmiah, Taman Universiti\n43000 Kajang, Selangor, Malaysia"
                android:textSize="16sp"
                android:drawableStart="@drawable/ic_location_24dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                app:drawableTint="#666666" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Info Note -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="Tap the phone or email text to interact instantly."
        android:textColor="#333333"
        android:textSize="14sp"
        android:textStyle="italic" />

</LinearLayout>
