<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:padding="16dp"
    tools:context=".AboutUsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Story: GMI"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#004A99"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Vision Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_vision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vision"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#004A99" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="To be the leading poly-skills institution, producing highly competent and job-ready technical personnel for high-tech industries."
                    android:textSize="16sp"
                    android:textColor="#555555" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Mission Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_mission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mission"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#004A99" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="To provide high-quality, market-driven engineering and technology programmes based on the German model of technical education."
                    android:textSize="16sp"
                    android:textColor="#555555" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Background Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Background"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#004A99" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="GMI was established in 1992 as a joint venture between the governments of Malaysia and Germany. We focus on providing advanced technical training that meets the stringent requirements of the industrial sector."
                    android:textSize="16sp"
                    android:textColor="#555555" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
