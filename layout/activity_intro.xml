<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/intro_bg_gradient">

    <!-- Intro Image -->
    <ImageView
        android:id="@+id/img_intro"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:src="@drawable/gmi_intro"
        android:contentDescription="GMI Intro"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_corners"
        android:clipToOutline="true"/>

    <!-- Title -->
    <TextView
        android:id="@+id/text_intro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the GMI Prospect App"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/text_intro_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore courses and manage your learning easily!"
        android:textSize="14sp"
        android:textColor="@color/secondary_text"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:lineSpacingExtra="1dp"/>

    <!-- Get Started Button -->
    <Button
        android:id="@+id/button_intro_next"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_gradient_rounded"
        android:paddingVertical="12dp"
        android:elevation="6dp"
        android:layout_gravity="center"/>

</LinearLayout>
